<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-3">
            <p>
                @{
        if (item.Photos.Count() > 0)
        {
            <a href="@Url.Action("filterPhoto", "Photos", new { albamId = item.ID })" title="@Html.DisplayFor(modelItem => item.AlbumName)" class="thumbnail">
                <img src="@(Url.Content("~/Content/PhotoGallery/" + item.AlbumName + "/" + item.Photos.FirstOrDefault().ImageName))" class="img-thumbnail" />
            </a>
        }
        else
        {
            <img src="~/Content/no_thumb.jpg" />
        }
                }
            </p>
            <span class="glyphicon glyphicon-folder-open" style="text-align:center">
                
                @{
        if (item.Photos.Count() > 0)
        {
            <a href="@Url.Action("filterPhoto", "Photos", new { albamId = item.ID })" title="@Html.DisplayFor(modelItem => item.AlbumName)">@Html.DisplayFor(modelItem => item.AlbumName)</a>
        }
        else
        {
            @Html.DisplayFor(modelItem => item.AlbumName)
        }
                }
            </span>
        </div>
    }
</div>